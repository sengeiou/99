    </function>
    <function>
        <description>
           toBinaryString
        </description>
        <name>toBinaryString</name>
        <function-class>pub.functions.StrFuncs</function-class>
        <function-signature>java.lang.String toBinaryString(java.lang.String)
        </function-signature>
        <example>
        </example>
    </function>
</taglib>
